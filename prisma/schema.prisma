// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model products {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       String
  rating      Float
  image       String
  reviews     reviews[]
}

model reviews {
  id         Int       @id @default(autoincrement())
  text       String
  mark       Int
  products   products? @relation(fields: [productsId], references: [id])
  productsId Int?
}
